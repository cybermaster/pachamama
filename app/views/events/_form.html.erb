<%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
        <legend><%= controller.action_name.capitalize %> Event</legend>

        <div class="control-group">
            <%= f.label :name, :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :name, :class => 'text_field' %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :location, :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :location, :class => 'text_field' %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :date, :class => 'control-label' %>
            <div class="controls">
                <%= f.date_select :date, :class => 'date_select' %>
            </div>
        </div>


        <div class="control-group">
            <%= f.label 'num tables', :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :dining_table_count, :class => 'text_field' %>
            </div>
        </div>
        
        <div class="control-group">
            <%= f.label :capacity, :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :capacity, :class => 'text_field' %>
            </div>
        </div>
        
        <div class="control-group">
            <%= f.label :default_seats_per_table, :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :default_seats_per_table, :class => 'text_field' %>
            </div>
        </div>
        
        <div class="form-actions">
            <%= f.submit nil, :class => 'btn btn-primary' %>
            <%= link_to 'Cancel', root_path, :class => 'btn' %>
        </div>
    </fieldset>
<% end %>
