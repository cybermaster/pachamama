<%= form_for @dining_table, :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
        <legend><%= controller.action_name.capitalize %> Table</legend>

        <div class="control-group">
            <%= f.label "event", :class => 'control-label' %>
            <div class="controls">
                <%= collection_select(:event, :id, Event.all, :id, :name, :selected => @event.id) %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :group_number, :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :group_number, :class => 'text_field'%>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :physical_number, :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :physical_number, :class => 'text_field' %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label "Table Captain", :class => 'control-label' %>
            <div class="controls">
                <%= collection_select(:user, :id, User.all, :id, :name, :selected => @dining_table.user_id) %>
            </div>
        </div>


        <div class="control-group">
            <%= f.label "Number of seats", :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :seats, :class => 'text_field' %>
            </div>
        </div>


        <div class="form-actions">
            <%= f.submit nil, :class => 'btn btn-primary' %>
            <%= link_to 'Cancel', event_path(@event), :class => 'btn' %>
        </div>
    </fieldset>
<% end %>

