<%= form_for @dining_table, :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
        <legend><%= controller.action_name.capitalize %> Table</legend>

        <div class="control-group">
            <%= f.label :event_id, :class => 'control-label' %>
            <div class="controls">
                <%= collection_select(:user, :id, Event.all, :id, :name) %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :group_number, :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :group_number, :class => 'text_field' %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :physical_number, :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :physical_number, :class => 'text_field' %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label "Table Captain", :class => 'control-label' %>
            <div class="controls">
                <%= collection_select(:user, :id, User.all, :id, :name) %>
                <%#= collection_select(:person, :city_id, User.all, :id, :name) %>
            </div>
        </div>


        <div class="form-actions">
            <%= f.submit nil, :class => 'btn btn-primary' %>
            <%= link_to 'Cancel', root_path, :class => 'btn' %>
        </div>
    </fieldset>
<% end %>

